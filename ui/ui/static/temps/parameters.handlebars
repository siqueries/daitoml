<style>
.fileUpload {
    position: relative;
    overflow: hidden;
    margin: 10px;
}
.fileUpload input.upload {
    position: absolute;
    top: 0;
    right: 0;
    margin: 0;
    padding: 0;
    font-size: 20px;
    cursor: pointer;
    opacity: 0;
    filter: alpha(opacity=0);
}
    .form-atfooter {
        margin-top: 15px;
        padding: 14px 0 15px;
        /* text-align: right; */
        border-top: 1px solid #ddd;
    }
</style>






<div class="row" id="parameters">
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <div style="margin: 0 auto; margin-top:40px;" class="panel panel-default">
            <div class="panel-heading">
                <h4 class="panel-title">Step 3: Parameters.</h4>
            </div>
            <div class="panel-body">

                    {{#if_eq algorithm  "RANDOM_FOREST_CLASSIFICATION"}}
                        <div class="form-group">
                            <label for="Num_Trees" class="control-label">Num Trees</label>
                            <input type="text" id="Num_Trees" name="Num_Trees" value="5" class="form-control">
                        </div>

                        <div class="form-group">
                            <label for="Max_Depth" class="control-label">Max Depth</label>
                            <input type="text" id="Max_Depth" name="Max_Depth" value="5" class="form-control">
                        </div>

                        <div class="form-group">
                            <label for="Max_Bins" class="control-label">Max Bins</label>
                            <input type="text" id="Max_Bins" name="Max_Bins" value="100" class="form-control">
                        </div>

                        <div class="form-group">
                            <label for="Impurity" class="control-label">Impurity</label>
                            <input type="text" id="Impurity" name="Impurity" value="gini" class="form-control">
                        </div>

                        <div class="form-group">
                            <label for="Feature_Subset_Strategy" class="control-label">Feature Subset Strategy</label>
                            <input type="text" id="Feature_Subset_Strategy" name="Feature_Subset_Strategy" value="auto" class="form-control">
                        </div>

                        <div class="form-group">
                            <label for="Seed" class="control-label">Seed</label>
                            <input type="text" id="Seed" name="Seed" value="12345" class="form-control">
                        </div>
                    {{/if_eq}}
               
                    

                    <div class="form-atfooter">
                        <button name="create" type="submit" id="submit-btn" class="btn btn-primary"><i class="fa fa-fw fa-bolt"></i> Proceed to Build Model</button>
                        <a href="javascript:void(0);" id="back-btn" class="btn btn-default"><i class="fa fa-fw fa-reply"></i>
                Back</a>

                        <span id="notice" class="btn btn-link"></span>
                    </div>


            </div>
        </div>
    </div>
</div>



